# Google Gemini AI Configuration

# Option 1: Vertex AI (Recommended)
# Run `gcloud auth application-default login`
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=global
GOOGLE_GENAI_USE_VERTEXAI=True

# Option 2: Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration
GEMINI_MODEL_FAST=gemini-3-flash-preview 
GEMINI_MODEL_POWERFUL=gemini-3-pro-preview

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Google Cloud Storage (for image uploads/selection)
GCS_BUCKET_NAME=your-bucket-name
GCS_MEDIA_FOLDER=dev
